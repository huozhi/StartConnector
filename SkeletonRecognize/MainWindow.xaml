<Window x:Class="SkeletonRecognize.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Width="640" Height="480" Closing="Window_Closed" Loaded="Window_loaded">
    <Grid>
        <Image Name="ColorImage"
               Width="640"
               Height="480">
        </Image>
        <Canvas Background="Transparent" Name="SkeletonCanvas">
            <Ellipse Fill="Red"
                     Height="20"
                     Width="20"
                     Name="ellipseLeftHand"
                     Stroke="White"/>
            <Ellipse Fill="Red"
                     Height="20"
                     Width="20"
                     Name="ellipseRightHand"
                     Stroke="White"/>
            <Ellipse Fill="Red"
                     Width="20"
                     Name="ellipseHead"
                     Stroke="White"/>
        </Canvas>
    </Grid>
</Window>
