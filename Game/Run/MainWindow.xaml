<Window x:Class="Run.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="520" Width="300">
    <Canvas>
        <StackPanel Orientation="Horizontal">
            <Label Name="button1" Width="100" Height="800" Background="Red"/>
            <Label Name="button2" Width="100" Height="800" Background="Transparent"/>
            <Label Name="button3" Width="100" Height="800" Background="Blue"/>
        </StackPanel>
        <Image Name="Player" Width="60" Height="60" />
        <Image Name="MiddleStar" Width="60" Height="60" />
        <Image Name="RightStar" Width="60" Height="60" />
        <Image Name="LeftStar" Width="60" Height="60" />
    </Canvas>
</Window>
