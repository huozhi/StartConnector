<Window x:Class="StartConnector.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:StartConnector"
        xmlns:extern="clr-namespace:BallTrackPath"
        
        Title="MainWindow" 
        Height="720" Width="1350"
        Loaded="Window_Loaded" Closing="Window_Closed"
        KeyDown="controlPlayerAngle"
        >
    <Canvas x:Name="canvas" Width="1000" Margin="10,10,6,3" 
            Background="Transparent">
        <Image x:Name="BackgroundImg"  
               Source="Images/background.png"
               Stretch="Fill" 
               Height="410" Width="1000" 
               >
        </Image>

        <Image x:Name="TimerImage" 
               Stretch="Fill" 
               ToolTipService.ToolTip="test"  
               Height="220" Width="295"
               RenderTransformOrigin="1,1"
               Canvas.Left="350" 
               Canvas.Top="90"
               >
        </Image>
        <!--Player Side-->
        <extern:Player   x:Name="Maya"
                        Canvas.Left="180" Canvas.Top="58" Height="482" Width="642" />
        <!--<Image x:FieldModifier="public" x:Name="Player" Height="130" Width="195"
               RenderTransformOrigin="0.5,0.5" Canvas.Left="450" Canvas.Top="290">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform x:Name="rotatePlayer" Angle="0"/>
                    <TranslateTransform X="-45" Y="15"/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>-->

        <Image Name="Net"  Height="200" Width="473" 
               Stretch="Fill"
               Canvas.Left="259" 
               Canvas.Top="393"
               RenderTransformOrigin="0.5,0.5"
               Source="Images/net.png"
               >
        </Image>

        <TextBox x:Name="ScoreText"
                 Text=" 0/ 0"
                 Background="Transparent"
                 BorderThickness="0"
                 Width="281" 
                 Height="96" 
                 FontSize="60"
                 FontStretch="UltraExpanded"
                 FontWeight="ExtraBold"
                 FontFamily="Monaco"
                 IsReadOnly="True" Canvas.Right="20" Canvas.Top="428" Canvas.Left="719" RenderTransformOrigin="0.486,0.279" 
                 />

        <local:FlyingBall x:Name="LeftBall"></local:FlyingBall>
        <local:FlyingBall x:Name="ObliqueLeftBall" Canvas.Left="92" Canvas.Top="-126"></local:FlyingBall>
        <local:FlyingBall x:Name="MiddleBall" Canvas.Left="480" Canvas.Top="-139"></local:FlyingBall>
        <local:FlyingBall x:Name="ObliqueRightBall" Canvas.Left="836" Canvas.Top="-126"></local:FlyingBall>
        <local:FlyingBall x:Name="RightBall" Canvas.Left="930"></local:FlyingBall>


    </Canvas>

</Window>
